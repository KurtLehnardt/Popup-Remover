
{
  "name": "Fix It",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "Removes annoying, screen-blocking modals that force users to sign up, disable ad-block or join a newsletter.",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_title": "Remove Modal"
  },
  "content_scripts": [
    {
      "matches": ["https://*.imgur.com/*", "http://*.imgur.com/*"],
      "js": ["background.js"]
    }
  ],
  "permissions": [
    "https://*/*",
    "http://*/*",
    "tabs",
    "activeTab",
    "cookies",
    "storage"
  ]
}